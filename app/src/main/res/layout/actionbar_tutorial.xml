<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/d_blue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forwardImage"
        android:src="@drawable/ic_action_forward"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backwardImage"
        android:src="@drawable/ic_action_back"
        android:layout_alignTop="@+id/forwardImage"
        android:layout_toLeftOf="@+id/forwardImage"
        android:layout_toStartOf="@+id/forwardImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beygdu"
        android:gravity="center"
        android:id="@+id/middleLabel"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="#ffa500"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haetta"
        android:gravity="center"
        android:layout_gravity="start"
        android:id="@+id/quitTextView"
        android:layout_alignTop="@+id/middleLabel"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="#ffffff"/>

</RelativeLayout>